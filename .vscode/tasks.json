{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "StartContainer",
      "type": "shell",
      "command": "docker run --name mywebsite -p 8080:80 -v ${workspaceFolder}\\_site:/usr/local/apache2/htdocs/   httpd:2.4-alpine",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Serve",
      "type": "shell",
      "command": "jekyll serve",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "isBackground": true
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "jekyll build",
      "group": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
